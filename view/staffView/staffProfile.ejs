<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Staff Profile Page</title>
    <link rel="stylesheet" href="/css/studentProfile.css">
   
</head>
<body>
      <!-- including admin sidebar -->
      <%- include('_staffIncludeFolder/staffSideBar') %>
      <!-- including admin sidebar -->
    <div class="container wrapp" id="complaintSection">
        <h2 class="" id="bio">Staff Bio Data</h2>
        <form class="row g-3" enctype="multipart/form-data">
            <% if (staff.profileImage && staff.imageType) { %>
                <div class="container text-center">
                    <img src="data:<%= staff.imageType %>;base64,<%= staff.profileImage %>" alt="Profile Image" style="width: 200px; height: 200px; border-radius: 10px;">
                </div>
            <% } else { %>
                <p>No image uploaded</p>
            <% } %>

            <div class="col-md-6">
                <label for="fname" class="form-label">First Name</label>
                <input type="text" class="form-control" name="fname" value="<%= staff.fname %>" disabled>
            </div>
            <div class="col-md-6">
                <label for="lname" class="form-label">Last Name</label>
                <input type="text" class="form-control" name="lname" value="<%= staff.lname %>" disabled>
            </div>
            <div class="col-md-6">
                <label for="phone_no" class="form-label">Phone Number</label>
                <input type="number" class="form-control" name="phone_no" value="<%= staff.phone_no %>" required>
            </div>
            <div class="col-md-6">
                <label for="email" class="form-label">Email</label>
                <input type="email" class="form-control" name="email" value="<%= staff.email %>" required>
            </div>
            <div class="col-md-6">
                <label for="address" class="form-label">Residential Address</label>
                <input type="text" class="form-control" name="address" value="<%= staff.address %>" required>
            </div>
            <div class="col-md-6">
                <label for="state" class="form-label">State of Origin</label>
                <input type="text" class="form-control" name="state" value="<%= staff.state %>" required>
            </div>
            <div class="col-md-6">
                <label for="LGA" class="form-label">LGA</label>
                <input type="text" class="form-control" name="LGA" value="<%= staff.LGA %>" required>
            </div>
            <div class="col-12">
                <button id="btn" class="btn btn-success">Save</button>
            </div>
        </form>
    </div>

    <script>
        document.querySelector('#btn').addEventListener('click', function(e) {
            e.preventDefault();
            const button = this;
            button.innerHTML = 'saving...';
            setTimeout(function() {
                button.innerHTML = 'saved';
            }, 3000);
            setTimeout(function() {
                window.location = "/user/dashboard";
            }, 4000);
        });
    </script>
</body>
</html>
