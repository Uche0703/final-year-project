    <div class="container-fluid">
        <div class="row">
            <!-- admin side bar>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>> -->
            <%- include('./includeFolder/adminSideBar') %>
            <!-- admin side bar>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>> -->
            <div class="col-12 col-md-9 col-lg-10 main-content">
              
                
        </div>
      
     
    
        <div class="container wrap-table " style="display: noe;">
            <div class="wrap-txt text-center">
              <h2 class="text-center"  id="h2">Booked Vendors</h2>
            </div>
          <table  >
            <thead>
                <tr>
                  <th>S/N</th>
                  <th>Vendor Full Name</th>
                  <th>Client Full  Name</th>
                  <th> Vendor Email</th>
                  <th> Client Email</th>
                  <th>Vendor Phone No</th>
                 <th>Vendor Job Title</th>
                  <th>Booking Date</th>
                  <th>Update/Rate</th>
                  <th>Delete</th>
                </tr>
              </thead>
              <tbody>
                <% bookedVendorsvendor.forEach((vendor, index) => { %>
                  <tr>
                    <td><%= index + 1 %></td>
                    <td><%= vendor.fName %>    <%= vendor.lName %></td>
                    <td><%= vendor.userRef.fName %>     <%= vendor.userRef.lName %></td>
                    <td><%= vendor.vendorRef.email %></td>
                    <td><%= vendor.userRef.email %></td>
                    <td><%= vendor.vendorRef.phone_no %></td>
                    <td><%= vendor.vendorRef.job_title %></td>
               
                 
                    <td><%= vendor.createdAt? new Date(vendor.createdAt).toLocaleDateString() : 'No data' %> </td>
                    <td><a href="/update/vendor/page?id=<%= vendor._id%> ">Update</a></td>
                    <td><a href="#" data-id="<%= vendor._id %> " id="del" class="del">Delete</a></td>
                  </tr>
                <% }); %>
              </tbody>
            </table>

          </div>
        
    </div>
    </div>
    <script>
    document.querySelectorAll(".del").forEach(button => {
    button.addEventListener("click", function(e) {
        e.preventDefault();
        const recordId = this.getAttribute("data-id");
        console.log("Data ID:", recordId);

        if (confirm("Do you want to delete this record?")) {
            fetch(`/admin/delete/booked/vendor/${recordId}`, {
                method: "DELETE"
            })
            .then(response => {
                return response.json();  // Correctly handle JSON parsing
            })
            .then(data => {
                if (data.status === "success") {
                    console.log("Record deleted successfully");
                    alert("Record deleted successfully");
                    location.reload();  // Reload the page after deletion
                } else {
                    console.log("Failed to delete record:", data.error);
                    alert("Failed to delete record: " + data.error);
                }
            })
            .catch(error => {
                console.error("Error:", error);
                alert("Operation failed");
            });
        }
    });
});
    </script>
   
    <!-- jQuery library -->
